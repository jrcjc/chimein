<h1>New im</h1>

<% form_for(@im) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :account_id %><br />
    <%= f.text_field :account_id, :value => @a_id%>
  </p>
   <p>
    <%= f.label :protocol %><br />
    <%= f.text_field :protocol %>
  </p>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type, :value => @default_type%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', ims_path %>